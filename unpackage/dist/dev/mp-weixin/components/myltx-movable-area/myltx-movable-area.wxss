.slider-container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 32rpx;
  position: relative;
}
.slider-container::before {
  content: '';
  position: absolute;
  height: 8rpx;
  border-radius: 8rpx;
  background-color: #EEEEEE;
  top: 50%;
  left: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 100%;
}
.slider-container .flex {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 8rpx;
  border-radius: 8rpx 0 0 8rpx;
  background-color: #3A84FA;
  margin-top: 12rpx;
  position: relative;
  z-index: 1;
}
.slider-container .sliderBar {
  height: 100%;
  border-radius: 8rpx;
  width: 100%;
}
.slider-container .sliderBar .gone {
  background-color: #3A84FA;
  height: 100%;
  position: absolute;
  left: 0;
  height: 8rpx;
  top: 12rpx;
  max-width: 100%;
  z-index: 1;
  border-radius: 0 8rpx 8rpx 0;
}
.slider-container .sliderBar .slider {
  width: 0;
  height: 100%;
  position: relative;
  z-index: 2;
}
.slider-container .sliderBar .slider::after {
  content: '';
  position: absolute;
  border-radius: 16rpx;
  background-color: #3A84FA;
  width: 32rpx;
  height: 100%;
  -webkit-transform: translatex(-50%);
          transform: translatex(-50%);
}
.slider-container .sliderBar .slider text {
  position: absolute;
  width: 60rpx;
  color: white;
  border-radius: 14rpx;
  top: -140%;
  left: 50%;
  text-align: center;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  background-color: #3A84FA;
}
.slider-container .sliderBar .slider text::after {
  content: '';
  position: absolute;
  border: 6rpx solid transparent;
  border-top-color: #3A84FA;
  top: 99%;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}

